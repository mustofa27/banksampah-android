<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="@dimen/spacing_large"
                android:topRightRadius="@dimen/spacing_large" />
            <solid android:color="@color/text_grey"/>
        </shape>
    </item>
    <item
        android:left="@dimen/spacing_xxsmall"
        android:right="@dimen/spacing_xxsmall"
        android:top="@dimen/spacing_xxsmall">
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="@dimen/spacing_large"
                android:topRightRadius="@dimen/spacing_large" />
            <solid android:color="@color/background_new" />
        </shape>
    </item>
</layer-list>